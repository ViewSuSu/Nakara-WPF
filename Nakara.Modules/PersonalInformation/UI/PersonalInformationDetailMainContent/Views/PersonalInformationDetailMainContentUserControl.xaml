<bases:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.Views.PersonalInformationDetailMainContentUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:chatbox="clr-namespace:Nakara.Modules.ChatBox.UI.Views"
    xmlns:const="clr-namespace:Nakara.Modules.PersonalInformation.Domain.Consts"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:personalInformationDetailsPage="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetailMainContent.ViewModels"
    xmlns:wealth="clr-namespace:Nakara.Modules.Wealth.UI.Main.Views"
    attached:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:DataContext="{d:DesignInstance Type=viewmodels:PersonalInformationDetailMainContentUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    Background="Gray"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Nakara.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.12*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="50,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Foreground="White"
                    Text="名片" />
                <wealth:WealthUserControl
                    Grid.Column="1"
                    Width="150"
                    HorizontalAlignment="Right" />
            </Grid>
            <TabControl
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="Transparent"
                BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="个人信息"
                    Style="{StaticResource CommonFunctionTabItem}">
                    <personalInformationDetailsPage:PersonalInformationDetailsPage />
                </TabItem>
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="英雄数据"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="赛季数据"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="历史战绩"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="打赏记录"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="社交头像"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="头像框"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="生涯成就"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="图鉴收集"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    VerticalAlignment="Center"
                    d:IsSelected="True"
                    Background="Transparent"
                    Header="信誉分"
                    IsSelected="{Binding NavigaToLatestNewsCommand.IsSelected}"
                    Style="{StaticResource CommonFunctionTabItem}" />
                <TabItem
                    Width="100"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Visibility="Hidden" />
                <TabItem
                    Width="100"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Visibility="Hidden" />
            </TabControl>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="10"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>
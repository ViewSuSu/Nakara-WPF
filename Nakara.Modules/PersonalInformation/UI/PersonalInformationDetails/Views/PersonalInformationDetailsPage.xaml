<bases:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.Views.PersonalInformationDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="Gray"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="30,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.075*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <Image />
                    <Image />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <UniformGrid Grid.Row="1" Columns="3">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock HorizontalAlignment="Center" d:Text="461" />
                                <TextBlock Text="登录天数" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock HorizontalAlignment="Center" d:Text="461" />
                                <TextBlock Text="英雄外观" />
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock HorizontalAlignment="Center" d:Text="461" />
                                <TextBlock Text="武器外观" />
                            </StackPanel>
                        </UniformGrid>
                    </Grid>
                    <UniformGrid Grid.Row="1" Columns="3">
                        <Image Source="pack://application:,,,/Nakara.Resources;component/Image/HeroStandArt/胡桃.png" Stretch="Uniform" />
                        <Image Source="pack://application:,,,/Nakara.Resources;component/Image/HeroStandArt/胡为.png" Stretch="Uniform" />
                        <Image Source="pack://application:,,,/Nakara.Resources;component/Image/HeroStandArt/岳山.png" Stretch="Uniform" />
                    </UniformGrid>
                    <ListBox
                        Grid.Row="2"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="Transparent"
                        BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch">
                                    <TextBlock d:Text="排位赛" Foreground="White" />
                                    <TextBlock HorizontalAlignment="Right" Foreground="White">
                                        <Run Text="6196" />
                                        <Run Text="场" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.3*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ComboBox
                        Grid.Row="0"
                        Width="100"
                        HorizontalAlignment="Left" />
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        d:Text="排位赛" />
                    <UniformGrid Grid.Row="1" Columns="3">
                        <Border>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Text="游戏时间" />
                                <TextBlock HorizontalAlignment="Center">
                                    <Run d:Text="82" />
                                    <Run Text="小时" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Margin="5,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Text="总场次" />
                                <TextBlock HorizontalAlignment="Center">
                                    <Run d:Text="82" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock Text="总击败" />
                                <TextBlock HorizontalAlignment="Center">
                                    <Run d:Text="82" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="pack://application:,,,/Nakara.Resources;component/Image/heroShow.png" Stretch="UniformToFill" />
        </Grid>
    </Grid>
</bases:UserControlBase>
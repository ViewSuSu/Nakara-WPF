<bases:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.Views.HeroTagPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:bases="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.PersonalInformation.UI.PersonalInformationDetails.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding EscCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroTagPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid Margin="0,0,0,60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="#3A000000">
                <Grid Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" />
                        <RowDefinition />
                        <RowDefinition Height="0.1*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="White"
                        Text="英雄印" />
                    <Grid Grid.Row="1">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="装配英雄印：" />
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Foreground="White">
                            <Run Text="0" />
                            <Run Text="/" />
                            <Run Text="100" />
                        </TextBlock>
                    </Grid>
                    <ItemsControl
                        Grid.Row="2"
                        Margin="0,0,0,30"
                        ItemsSource="{Binding InventoryItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="8" Rows="6" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="50"
                                    Height="50"
                                    Background="#333"
                                    BorderBrush="#666"
                                    BorderThickness="1">
                                    <Grid>
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="{Binding Icon}"
                                            Stretch="Uniform" />
                                        <TextBlock
                                            Margin="0,0,2,2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding Count}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button
                        Grid.Row="4"
                        Command="{Binding SaveCommand}"
                        Content="保存"
                        FontSize="20"
                        Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
                </Grid>
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding EscCommand}" />
    </Grid>
</bases:UserControlBase>

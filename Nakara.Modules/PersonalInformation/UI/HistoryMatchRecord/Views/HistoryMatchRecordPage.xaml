<base:UserControlBase
    x:Class="Nakara.Modules.PersonalInformation.UI.HistoryMatchRecord.Views.HistoryMatchRecordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.PersonalInformation.UI.HistoryMatchRecord.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.Wealth.UI.Main.ViewModels"
    xmlns:viewmodels1="clr-namespace:Nakara.Modules.PersonalInformation.UI.HistoryMatchRecord.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels1:HistoryMatchRecordPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button Width="100" Content="天选之人" />
                <Button Width="100" Content="征神之路" />
                <Button Width="100" Content="无间镖客" />
            </StackPanel>
            <Border Grid.Row="1">
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    Background="Transparent"
                    ItemsSource="{Binding MatchDataItems, Mode=OneWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="{Binding Avatar, Mode=OneWay}" />
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Foreground="White">
                                        <Run d:Text="7" Text="{Binding CurrentRank, Mode=OneWay}" />
                                        <Run d:Text="/" />
                                        <Run d:Text="17" Text="{Binding AllTeams, Mode=OneWay}" />
                                    </TextBlock>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        d:Text="15"
                                        Foreground="White"
                                        Text="{Binding KillNumber}" />
                                </StackPanel>
                                <Image Grid.Column="2" />
                                <TextBlock
                                    Grid.Column="6"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="{Binding GameTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>
    </Grid>
</base:UserControlBase>
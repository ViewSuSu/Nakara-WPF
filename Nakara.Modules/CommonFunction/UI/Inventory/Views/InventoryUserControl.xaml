<base:UserControlBase
    x:Class="Nakara.Modules.CommonFunction.UI.Inventory.Views.InventoryUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:Nakara.Framework.UI.AttachedProperties;assembly=Nakara.Framework"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.CommonFunction.UI.Inventory.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.CommonFunction.UI.Inventory.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:InventoryUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <ItemsControl ItemsSource="{Binding InventoryItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="8" Rows="6" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="50"
                        Height="50"
                        Background="#333"
                        BorderBrush="#666"
                        BorderThickness="1">
                        <Grid>
                            <Image
                                Width="40"
                                Height="40"
                                Source="{Binding Icon}"
                                Stretch="Uniform" />
                            <TextBlock
                                Margin="0,0,2,2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                FontSize="10"
                                Foreground="White"
                                Text="{Binding Count}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</base:UserControlBase>
<base:UserControlBase
    x:Class="Nakara.Modules.Social.UI.Social.Views.SocialUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara.Modules.Social.UI.Social.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="Gray"
    d:DesignHeight="100"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UniformGrid Grid.Column="3" Columns="4">
        <Image Style="{StaticResource Email}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
        <Image Style="{StaticResource Email}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
        <Image Style="{StaticResource Contact}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction Command="{Binding OpenFrendListCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
        <Image Style="{StaticResource Setting}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonDown">
                    <b:InvokeCommandAction />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Image>
    </UniformGrid>
</base:UserControlBase>
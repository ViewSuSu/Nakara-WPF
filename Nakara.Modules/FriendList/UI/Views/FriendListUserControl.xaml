<base:UserControlBase
    x:Class="Nakara.Modules.FriendList.UI.Views.FriendListUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Nakara.Framework.Core.Bases;assembly=Nakara.Framework"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Nakara.Modules.FriendList.UI.ViewModels"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:FriendListUserControlViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="300"
    x:ClassModifier="internal"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="3" Background="Transparent">
            <TabItem
                Height="30"
                Header="找搭子"
                Style="{StaticResource FriendListTabItem}" />
            <TabItem
                Height="30"
                Header="联系人"
                Style="{StaticResource FriendListTabItem}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Expander Grid.Row="0" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Text="聚义厅" />
                            </Grid>
                        </Expander.Header>
                    </Expander>
                    <Expander Grid.Row="1" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Text="默认分组" />
                            </Grid>
                        </Expander.Header>
                        <ListBox
                            HorizontalContentAlignment="Stretch"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.25*" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="0.1*" />
                                        </Grid.ColumnDefinitions>
                                        <Image />
                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                            <TextBlock d:Text="Name" />
                                            <TextBlock d:Text="在线" />
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                    <Expander Grid.Row="2" HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Text="屏蔽名单" />
                            </Grid>
                        </Expander.Header>
                    </Expander>
                </Grid>
            </TabItem>
            <TabItem
                Height="30"
                Header="最近"
                Style="{StaticResource FriendListTabItem}" />
            <TabItem
                Height="30"
                Header="附近"
                Style="{StaticResource FriendListTabItem}" />
            <TabItem
                Height="30"
                Header="申请"
                Style="{StaticResource FriendListTabItem}" />
        </TabControl>
    </Grid>
</base:UserControlBase>
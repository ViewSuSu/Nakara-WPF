<UserControl
    x:Class="Nakara_WPF.Wealth.WealthUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Nakara.Controls;assembly=Nakara.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nakara_WPF.Wealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=local:WealthViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Nakara.Controls;component/Themes/DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UniformGrid Grid.Column="2" Columns="3">
        <controls:IconTextBlockCustomControl
            d:Text="12500"
            Style="{StaticResource GoldBrick}"
            Text="{Binding WealthModel.GoldBrick}" />
        <controls:IconTextBlockCustomControl d:Text="12500" Style="{StaticResource AncientCoins}" />
        <controls:IconTextBlockCustomControl d:Text="12500" Style="{StaticResource AncientCoins}" />
    </UniformGrid>
</UserControl>

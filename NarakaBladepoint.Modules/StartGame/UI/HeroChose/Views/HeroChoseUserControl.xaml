<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.StartGame.UI.HeroChose.Views.HeroChoseUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:NarakaBladepoint.Framework.UI.AttachedProperties;assembly=NarakaBladepoint.Framework"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.StartGame.UI.HeroChose.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.StartGame.UI.HeroChose.ViewModels"
    attach:EscKeyAttachedProperty.Command="{Binding ReturnCommand}"
    d:Background="Gray"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroChoseUserControlViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid Background="#CC000000">
        <Grid Margin="80,30,80,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*" />
                <RowDefinition />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="36"
                    Foreground="White"
                    Text="预选英雄" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="请选择3个英雄，匹配时会优先按照首选英雄进行匹配队友。若未选择英雄，则代表任意英雄" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ItemsControl
                    Grid.Column="0"
                    d:ItemsSource="{d:SampleData ItemCount=25}"
                    ItemsSource="{Binding HeroItemModels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemHeight="70" ItemWidth="70" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                                <Image
                                    Width="10"
                                    Height="10"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/ModeSelection/Icon6.png"
                                    d:Visibility="Visible"
                                    Source="{Binding Icon}"
                                    Stretch="UniformToFill"
                                    Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid Grid.Column="1" Margin="80,100,80,120">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="0.2*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock
                                FontSize="25"
                                Foreground="White"
                                Text="首选英雄" />
                            <Grid Margin="0,20,0,0">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                                <Image
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/ModeSelection/Icon7.png"
                                    Source="{Binding Icon}"
                                    Stretch="UniformToFill">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Image>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <TextBlock
                                FontSize="25"
                                Foreground="White"
                                Text="次选英雄" />
                            <Grid Margin="0,20,0,0">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                                <Image
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/ModeSelection/Icon7.png"
                                    Source="{Binding Icon}"
                                    Stretch="UniformToFill">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Image>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="5" Orientation="Vertical">
                            <TextBlock
                                FontSize="25"
                                Foreground="White"
                                Text="" />
                            <Grid Margin="0,20,0,0">
                                <Image
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                    Source="{Binding Icon}"
                                    Stretch="Uniform" />
                                <Image
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    d:Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Region/ModeSelection/Icon7.png"
                                    Source="{Binding Icon}"
                                    Stretch="UniformToFill">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Image>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <UniformGrid Grid.Row="1" Columns="2">
                        <Button
                            Height="30"
                            Margin="0,0,30,0"
                            Content="确定"
                            Style="{StaticResource SettingBackToGameCommandButtonStyle}" />
                        <Button
                            Height="30"
                            Margin="30,0,0,0"
                            Content="一键清空"
                            Style="{StaticResource CleanButtonStyle}" />
                    </UniformGrid>
                </Grid>
            </Grid>
        </Grid>
        <controls:EscBackControl
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ReturnCommand}" />
    </Grid>
</bases:UserControlBase>

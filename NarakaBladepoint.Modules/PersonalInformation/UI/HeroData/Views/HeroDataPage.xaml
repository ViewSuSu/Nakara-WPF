<bases:UserControlBase
    x:Class="NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views.HeroDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:bases="clr-namespace:NarakaBladepoint.Framework.Core.Bases;assembly=NarakaBladepoint.Framework"
    xmlns:consts="clr-namespace:NarakaBladepoint.Shared.Consts;assembly=NarakaBladepoint.Shared"
    xmlns:controls="clr-namespace:NarakaBladepoint.Controls;assembly=NarakaBladepoint.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NarakaBladepoint.Modules.PersonalInformation.UI.HeroData.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:HeroDataPageViewModel}"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background2.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="30,20,20,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="50"
                        Height="50"
                        Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Icon.png" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="野排牢张" />
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TabControl Width="200" Style="{StaticResource AverageTabControlStyle}">
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Solo}"
                            Style="{StaticResource FriendListTabItem}" />
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Duo}"
                            Style="{StaticResource FriendListTabItem}" />
                        <TabItem
                            Background="#1A000000"
                            Header="{x:Static consts:TeamSizeConstant.Trio}"
                            Style="{StaticResource FriendListTabItem}" />
                    </TabControl>
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="100"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <controls:ToggleButtonComboBoxItem Content="排位赛" />
                    </controls:ToggleButtonComboBox>
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="100"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        DisplayMemberPath="Season"
                        ItemsSource="{Binding SeasonDataModels}"
                        SelectedItem="{Binding SelectedSeasonDataModel}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="英雄对比" />
                    <controls:ToggleButtonComboBox
                        Grid.Row="0"
                        Width="100"
                        HorizontalAlignment="Right"
                        SelectedIndex="0">
                        <controls:ToggleButtonComboBoxItem Content="游戏时间" />
                        <controls:ToggleButtonComboBoxItem Content="前五率" />
                        <controls:ToggleButtonComboBoxItem Content="场均伤害" />
                        <controls:ToggleButtonComboBoxItem Content="击败/被击败" />
                        <controls:ToggleButtonComboBoxItem Content="英雄积分" />
                    </controls:ToggleButtonComboBox>
                    <ListBox
                        Grid.Row="1"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=10}"
                        AlternationCount="1000"
                        Background="Transparent"
                        BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <controls:HighlightBorder Margin="0,1">
                                    <controls:HighlightBorder.Style>
                                        <Style TargetType="{x:Type controls:HighlightBorder}">
                                            <Setter Property="Background" Value="#1A000000" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="pack://application:,,,/NarakaBladepoint.Resources;component/Image/background4.png" Stretch="UniformToFill" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </controls:HighlightBorder.Style>
                                    <Grid Height="35">
                                        <Image
                                            HorizontalAlignment="Left"
                                            Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/Hero/崔三娘.png"
                                            Stretch="UniformToFill" />
                                        <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            d:Text="4小时"
                                            Foreground="White"
                                            Text="{Binding Duration, StringFormat={}{0}小时}" />
                                    </Grid>
                                </controls:HighlightBorder>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="张起灵" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="最近12场" />
                        <UniformGrid Grid.Row="1" Columns="3">
                            <Grid Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="前五率" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Text="3.2%" />
                                </StackPanel>
                            </Grid>
                            <Grid Margin="5,0" Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="场均伤害" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Text="3.2%" />
                                </StackPanel>
                            </Grid>
                            <Grid Background="#1A000000">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="击败/被击败" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Text="3.2%" />
                                </StackPanel>
                            </Grid>
                        </UniformGrid>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="所有场次" />
                        <Grid Grid.Row="1">
                            <UniformGrid Rows="4">
                                <Grid Background="#3A000000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.75*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <UniformGrid
                                    Margin="0,5,0,0"
                                    Background="#1A000000"
                                    Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="前五率" />
                                        <TextBlock Foreground="White" Text="29.0%" />
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="天选率" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="3.2%" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="获胜数" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="1" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid
                                    Margin="0,5"
                                    Background="#1A000000"
                                    Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均伤害" />
                                        <TextBlock Foreground="White" Text="11385" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="单局最高伤害" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="35276" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="场均治疗" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="7852" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总淘汰" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="79" />
                                    </StackPanel>
                                </UniformGrid>

                                <UniformGrid Background="#1A000000" Columns="4">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="击败 / 被击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="1.66" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="单局最高击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="11" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="场均击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="3.32" />
                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="总击败" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="White"
                                            Text="103" />
                                    </StackPanel>
                                </UniformGrid>
                            </UniformGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Image Source="pack://application:,,,/NarakaBladepoint.Resources;component/Image/heroShow.png" Stretch="UniformToFill" />
        </Grid>
    </Grid>
</bases:UserControlBase>